.container {
  padding: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 0;
  background-color: white;
  padding: 20px;
  margin-bottom: 20px;
  border-radius: 10px;
}

.room-title {
  font-size: 18px;
  font-weight: bold;
}

.ratio {
  font-size: 14px;
  color: #999;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin: 20px 0 10px 0;
  color: #333;
}

.player-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.player-item {
  flex: 0 0 48%;
  margin-bottom: 20rpx;
}

.player-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, #34c759, #4cd964);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.player-info {
  width: 100%;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.score {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.total-score {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 8rpx;
}

.positive {
  color: #ff4444;
}

.negative {
  color: #00aa00;
}

.history-list {
  background-color: white;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 120px;
  max-height: 300px;
  overflow-y: auto;
}

.history-item {
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
}

.history-title {
  font-weight: bold;
  color: #333;
}

.history-content {
  color: #666;
  font-size: 14px;
  word-break: break-all;
}

.fab-container {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  z-index: 99;
}

.fab-button {
  width: 80%;
  max-width: 300px;
  height: 80rpx;
  background: linear-gradient(45deg, #34c759, #4cd964);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(52, 199, 89, 0.4);
}

.fab-button::after {
  border: none;
}

.footer {
  position: fixed;
  bottom: 20rpx;
  left: 0;
  right: 0;
  padding: 0 40rpx;
  z-index: 99;
}

.end-game-button {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(45deg, #ff3b30, #ff9500);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 59, 48, 0.4);
}

.end-game-button::after {
  border: none;
}

/* Scoring Modal Styles */
.scoring-modal-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.scoring-modal {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: white;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  padding: 30rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.score-sum {
  font-size: 28rpx;
  color: #ff4444;
}

.player-score-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.player-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.score-input {
  flex: 1;
  height: 60rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  text-align: right;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(45deg, #34c759, #4cd964);
  color: white;
}

.confirm-btn[disabled] {
  background-color: #cccccc;
  color: #999;
}